# Environment Configuration for El Fuego Backend
# Copy this file to .env and fill in your actual values

# Application
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/elfuego

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=hermetic_texts

# OpenAI (optional - for AI synthesis)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic (optional - for AI synthesis)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Security
SECRET_KEY=change-this-in-production-to-a-secure-random-key

# Monitoring
ENABLE_PROMETHEUS=true
LOG_LEVEL=INFO
